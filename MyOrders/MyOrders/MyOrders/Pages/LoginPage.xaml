<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Supermercado.LoginPage">
	<ContentPage.Content>
		<StackLayout Padding ="10,30,10,10" Spacing="10">
			<Label Text="MeLoComo"
				   Font="30"
					HorizontalOptions="Center"
					VerticalOptions="Center"/>
			
			<Label Text="Ingreso al Sistema"
					HorizontalOptions="Center"
					VerticalOptions="Center"/>
			<ActivityIndicator x:Name="waitActivityIndicator"
					HorizontalOptions="Center"
					VerticalOptions="Center"/>
				
			<Label Text="Email"
					HorizontalOptions="Start"
					VerticalOptions="Center"/>
			<Entry x:Name="emailEntry"
					Placeholder="Ingrese Email"
					HorizontalOptions="FillAndExpand"
					VerticalOptions="Center"/>

			<Label Text="Password"
					HorizontalOptions="Start"
					VerticalOptions="Center"/>
			<Entry x:Name="passwordEntry"
					Placeholder="Ingrese Password"
					HorizontalOptions="FillAndExpand"
					VerticalOptions="Center"/>
			<Button x:Name="loginButton"
					Text="Acceder"
					BackgroundColor="Green"
					TextColor="White"
				HorizontalOptions="FillAndExpand"
					VerticalOptions="Center"/>
			
		</StackLayout>

		
	</ContentPage.Content>
</ContentPage>
